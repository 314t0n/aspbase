@model Piton.WebUI.Models.LoginViewModel
@{ 
    ViewBag.Title = "Admin: Log In"; 
}
<div class="container login-form">
    <h1>Log In</h1>
    <p>Please log in to access the administrative area:</p>
    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form" }))
    {        @Html.ValidationSummary(true)
      
        <div class="form-group">
            @Html.LabelFor(m => m.UserName, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.UserName, new { @class = "control-group form-control" })
            @Html.ValidationMessage("Username", new { @class = "alert-danger help-inline" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "control-label" })
            @Html.PasswordFor(m => m.Password, new { @class = "control-group form-control" })
            @Html.ValidationMessage("Password", new { @class = "alert-danger help-inline" })
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
    }
</div>
